      <organization>FutureBuisness</organization>
    </developer>
    <developer>
      <name>Oleg Grishanovich</name>
      <email>emanuilsmith@gmail.com</email>
      <organization>FutureBuisness</organization>
    </developer>
  </developers>
</project>
